{
  "name": "server",
  "description": "Deco MCP server built on top of Cloudflare Workers",
  "version": "1.0.0",
  "scripts": {
    "dev": "deco dev --clean-build-dir ./view-build",
    "deploy": "wrangler build && deco deploy -y ./dist --public",
    "deploy:ci": "wrangler build && deco deploy -y -t $DECO_DEPLOY_TOKEN ./dist --public",
    "gen": "deco gen --output=deco.gen.ts",
    "gen:self": "deco gen --self=$DECO_SELF_URL --output=deco.gen.ts"
  },
  "dependencies": {
    "@deco/workers-runtime": "npm:@jsr/deco__workers-runtime@0.17.6",
    "hono": "^4.7.9",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "deco-cli": "^0.17.6",
    "drizzle-kit": "^0.31.4",
    "wrangler": "^4.28.0"
  }
}
