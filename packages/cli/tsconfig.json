{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "src/types/node-globals.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "../../apps/**/*",
    "../../packages/sdk/**/*",
    "../../packages/ai/**/*",
    "../../packages/runtime/**/*",
    "../../packages/ui/**/*"
  ]
}
