---
import LanguagePicker from "./LanguagePicker.astro";

const locale = Astro.params.locale;
---

<nav class="flex justify-between items-center gap-4 p-4 bg-gray-100 border-b">
  <div class="flex gap-4">
    <a href={`/${locale}`}>Deco - Docs</a>
    <a href="#">Posts</a>
    <a href="#">Contact</a>
  </div>
  <div class="flex items-center gap-2">
    <LanguagePicker />
    <div id="theme-toggle"></div>
  </div>
</nav>

<script>
  import React from "react";
  import { ThemeToggle } from "./ThemeToggle";
  import { createRoot } from "react-dom/client";

  // Mount theme toggle
  const themeToggleContainer = document.getElementById("theme-toggle");
  if (themeToggleContainer) {
    const root = createRoot(themeToggleContainer);
    root.render(React.createElement(ThemeToggle));
  }
</script>
