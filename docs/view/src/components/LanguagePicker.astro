---
import { languages } from '../i18n/ui';

const route = Astro.params.locale;
---

<div class="relative inline-block">
  <select 
    id="language-picker"
    class="
      appearance-none bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 
      rounded-lg px-4 py-2 pr-8 text-sm font-medium text-gray-900 dark:text-white
      focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500
      hover:border-gray-400 dark:hover:border-gray-500
      transition-colors duration-200 ease-in-out
      cursor-pointer min-w-[120px]
    "
    aria-label="Select language"
  >
    {Object.entries(languages).map(([lang, label]) => (
      <option 
        value={lang} 
        selected={lang === route}
        class="bg-white dark:bg-gray-800 text-gray-900 dark:text-white"
      >
        {label}
      </option>
    ))}
  </select>
  
  <!-- Custom dropdown arrow -->
  <div class="absolute inset-y-0 right-0 flex items-center pr-2 pointer-events-none">
    <svg class="w-4 h-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </div>
</div>

<script>
  document.getElementById('language-picker')?.addEventListener('change', (e) => {
    const target = e.target as HTMLSelectElement;
    const selectedLang = target.value;
    const currentRoute = window.location.pathname.split('/').slice(2).join('/');
    window.location.href = `/${selectedLang}/${currentRoute}`;
  });
</script>