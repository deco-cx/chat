---
import BaseHead from "../components/ui/BaseHead.astro";
import Footer from "../components/ui/Footer.astro";
import Header from "../components/ui/Header.astro";
import Sidebar from "../components/ui/Sidebar.astro";
import TableOfContents from "../components/ui/TableOfContents.astro";
import "../styles/global.css";
const { title } = Astro.props;
---

<html lang="en" data-theme="light">
  <head>
    <!-- Theme detection script - must be first to prevent flash -->
    <script is:inline>
      (function () {
        // Get saved theme from localStorage or default to auto
        const savedTheme = localStorage.getItem("theme") || "auto";

        function applyTheme(theme) {
          const html = document.documentElement;

          if (theme === "auto") {
            // Use system preference
            const prefersDark = window.matchMedia(
              "(prefers-color-scheme: dark)"
            ).matches;
            html.setAttribute("data-theme", prefersDark ? "dark" : "light");
          } else {
            html.setAttribute("data-theme", theme);
          }
        }

        // Apply theme immediately
        applyTheme(savedTheme);

        // Listen for system theme changes if using auto
        if (savedTheme === "auto") {
          window
            .matchMedia("(prefers-color-scheme: dark)")
            .addEventListener("change", function (e) {
              applyTheme("auto");
            });
        }
      })();
    </script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
      rel="stylesheet"
    />
    <BaseHead title={title} />

    <!-- Prevent flash of unstyled content -->
    <style>
      /* Prevent flash by setting default theme immediately */
      html {
        color-scheme: light;
      }
      html[data-theme="dark"] {
        color-scheme: dark;
      }
    </style>
  </head>
  <body class="bg-app-background text-foreground">
    <div class="flex h-screen overflow-hidden">
      <div class="shrink-0">
        <Sidebar />
      </div>
      <div class="flex-1 overflow-y-auto scrollbar-hide">
        <div class="flex min-h-full py-16 px-8 gap-x-8">
          <article class="flex-1">
            <slot />
          </article>
          <div class="w-80 shrink-0">
            <TableOfContents />
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
